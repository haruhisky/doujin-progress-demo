{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true
  },
  "include": [
    "src/core/**/*.ts",
    "src/main/**/*.ts",
    "src/modules/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/renderer"
  ]
}
